@model DebtMan.WebApp.Models.GiftBox

@{
    ViewBag.Title = "Completed";
}

<h2>Completed</h2>

    <div class="display-label">For</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.For)
    </div>

<table>
    <tr>
        <th>Name</th>
        <th>Price</th>
    </tr>

@foreach (var item in Model.Gifts) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
    </tr>
}

</table>
